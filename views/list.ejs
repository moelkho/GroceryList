<html>

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body class="bg-info">
    <div class="row">
        <div class="col-md-4 offset-md-3" style="background-color: #fff;margin-top: 25px;padding:20px;">
            <h3><a class="btn btn-secondary" href="/grocery"><i class="fa fa-plus"></i> Ajouter Item</a> Grocery List
            </h3>
            <table class="table table-striped">
                <tr>
                    <thead>
                        <tr>
                            <th>Nom de l'item</th>
                            <th>Quantite</th>
                            <th>Prix estime</th>
                            <th></th>

                        </tr>
                    </thead>
                </tr>
                <% for(var i=0; i < docs.length; i++) { %>
                <tbody>
                    <tr>
                        <td><%= docs[i].title %></td>
                        <td><%= docs[i].quantity %></td>
                        <td><%= docs[i].expectedprice %></td>
                        <td>

                            <a href="/grocery/<%= docs[i]._id %>"><i class="fa fa-pencil fa-lg"
                                    aria-hidden="true"></i></a>
                            <a href="/grocery/delete/<%= docs[i]._id %>"
                                onclick="return confirm('Voulez vous supprimer cet item ?');"><i
                                    class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                        </td>

                    </tr>

                    <% } %>
                   
                </tbody>
            </table>


        </div>
        <div class="col-md-4 offset-md-3" style="background-color: green;margin-top: 25px;padding:20px;">
            <tr>
                <td >Montant estime :</td>
                <td ><%= totals %> $</td>
            </tr>
        </div>
    </div>
</body>

</html>